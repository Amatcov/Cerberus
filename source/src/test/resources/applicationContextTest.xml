<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context 
                           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="password" value="testinterface"/>
        <property name="username" value="cerberus"/>
        <property name="url" value="jdbc:mysql://localhost:3306/cerberus"/>
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
    </bean>

    <bean id="seleniumService" class="com.redcats.tst.service.impl.SeleniumService">
    </bean>

    <bean id="runTestCaseService" class="com.redcats.tst.service.impl.RunTestCaseService">
    </bean>

    <context:annotation-config/>

    <context:component-scan base-package="com.redcats.tst.*">
        <context:exclude-filter type="regex" expression="com.redcats.tst.srv.cerberus.*"/>
    </context:component-scan>

</beans>